{
  "manifest_version": 2,
  "name": "PWD Gen",
  "version": "1.0",
  "description": "A secure password generator extension",
  "browser_specific_settings": {
    "gecko": {
      "id": "pwd-gen@example.com",
      "strict_min_version": "57.0"
    }
  },
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/16.png",
      "28": "icons/28.png",
      "64": "icons/64.png",
      "128": "icons/128.png"
    }
  },
  "icons": {
    "16": "icons/16.png",
    "28": "icons/28.png",
    "64": "icons/64.png",
    "128": "icons/128.png"
  },
  "permissions": [
    "clipboardWrite"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'; style-src 'self' https://cdn.jsdelivr.net https://cdnjs.cloudflare.com"
}
